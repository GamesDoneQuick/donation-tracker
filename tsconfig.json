{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "baseUrl": "./bundles",
    "paths": {
      "@admin/*": ["./admin/*"],
      "@common/*": ["./common/*"],
      "@processing/*": ["./processing/*"],
      "@public/*": ["./public/*"],
      "@spec/*": ["../spec/*"],
      "@tracker/*": ["./tracker/*"],
      "@uikit/*": ["./uikit/*"]
    }
  },
  "include": ["./bundles/**/*", "./tests/snapshots/check.ts"]
}
