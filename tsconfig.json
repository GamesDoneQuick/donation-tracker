{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
  },
  "include": [
    "./bundles/**/*"
  ],
  "typeRoots": ["./bundles/typings", "./node_modules/@types"]
}
